<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/css/index.css">
    <link rel="stylesheet" type="text/css" href="/css/userLoginRegister.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 1.3rem;
            text-align: center;
        }
        input{
            font-size: 1.2rem;
        }
        .admin-container {
            text-align: center;
        }
        button{
            padding: 4px;
            font-size: 1.2rem;
        }
        .dog-details-upload-container div{
            margin: 1rem;
            font-size: 1.3rem;
        }
        .action-button {
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
        
        .modal {
            display: none;
            position: fixed;
            z-index: 1000000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }
        
        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 35px;
            font-weight: bold;
            cursor: pointer;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        .admin-user-main-container {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }
        
        .admin-user-container {
            text-align: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            max-width: 300px;
            width: 100%;
        }
        
        form {
            display: flex;
            flex-direction: column;
            margin-top: 10px;
        }
        
        label,
        input,
        button {
            margin-bottom: 10px;
            font-size: 16px;
        }
        button{
            border-color: rgba(0, 0, 0, 0.4);
            padding: 5px 10px;
            cursor: pointer;
        }
        a {
            color: blue;
            text-decoration: none;
        }

        .application-main-container{
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;

        }
        .application-container{
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 60%;
            font-weight: bold;
            margin: .5rem;
            font-size: 1rem;
            margin-left: auto;
            margin-right: auto
        }
        .application-container span{
            font-weight: 400;

        }
        .admin-home{
            border: 2px solid #fdc500;
        }
        .admin-jobs-main-container{
            display: flex;
            flex-direction: column;
        }
        .admin-jobs-container{
            width: 80%;
        }
        
        .admin-jobs-containertable {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 70%;
            margin: 2rem;
        }
        
        .admin-jobs-container table th, td {
            border: 1px solid var(--bg-light-grey);
            text-align: left;
            padding: .6rem;
            font-size: 1rem;
        }
    </style>
</head>

<body>

    <div class="header">
        
        <div class="navbar">
            <div class="logo-header">
                <a class="navbar-brand" href="/admin">
                    <img id="logoImage" src="/images/logo-primary.png" alt="Logo" class="logo">
                </a>
                
                <div class="menu-icon" id="menuIcon">
                    <i class="fa-solid fa-bars"></i>
                </div>
            </div>
            <div class="menu" id="navbarNav">
                
                <ul class="user-login">
                    
                    <% if (authorized && username) { %>
                
                    <p class="">Hi, <span style="font-size: 1.6rem"><%= username %></span> !&nbsp</p>
                    <li class=""><a href="/admin/logout">Logout</a></li>
                    <% } else { %>
                    <li class=""><a href="/admin/login">Login</a></li>
                    <li class=""><a href="/admin/register">Sign Up</a></li>
                    <% } %>
                </ul>

                
            </div>
            <!-- <h2 style="display:inline;">Admin Page</h2> -->
            <a href="/admin"><button class="admin-home">Admin Home Page</button></a>
        </div>
        
    </div>
    <div >
        <%- body %>
    </div>
    

    <script>
        
        const dogImageModal = document.getElementById("dogImageModal");
        const dogUploadModal = document.getElementById("dogUploadModal");
        const dogImageUploadBtn = document.getElementById("dogImageUploadBtn");
        const dogUploadBtn = document.getElementById("dogUploadBtn");

        // ----when the user clicks the button, open the modal
        dogImageUploadBtn.onclick = function () {
            dogImageModal.style.display = "block";
        };

        dogUploadBtn.onclick = function () {
            dogUploadModal.style.display = "block";
        };

        // --the user clicks on x, close the modal
        const closeButtons = document.getElementsByClassName("close");
        for (const closeButton of closeButtons) {
            closeButton.onclick = function () {
                dogImageModal.style.display = "none";
                dogUploadModal.style.display = "none";
            };
        }

        //----close the modal if the user clicks outside the modal
        window.onclick = function (event) {
            if (event.target === dogImageModal) {
                dogImageModal.style.display = "none";
            }
            if (event.target === dogUploadModal) {
                dogUploadModal.style.display = "none";
            }
        };

        
        const submitDogBtn = document.getElementById("submitDog");
        submitDogBtn.onclick = function () {
            const breed = document.getElementById("breed").value;
            const age = document.getElementById("age").value;
            const inService = document.getElementById("inService").checked;
            const status = document.getElementById("status").value;

            
        };

    </script>
    <script src="../scripts/main.js"></script>
</body>

</html>
