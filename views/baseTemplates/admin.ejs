<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 1.3rem;
            text-align: center;
        }
        input{
            font-size: 1.2rem;
        }
        .admin-container {
            text-align: center;
        }
        button{
            padding: 4px;
            font-size: 1.2rem;
        }
        .dog-details-upload-container div{
            margin: 1rem;
            font-size: 1.3rem;
        }
        .action-button {
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
        
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }
        
        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        .admin-user-main-container {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }
        
        .admin-user-container {
            text-align: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            max-width: 300px;
            width: 100%;
        }
        
        form {
            display: flex;
            flex-direction: column;
            margin-top: 10px;
        }
        
        label,
        input,
        button {
            margin-bottom: 10px;
            font-size: 16px;
        }
        
        a {
            color: blue;
            text-decoration: none;
        }

        .application-main-container{
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;

        }
        .application-container{
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 60%;
            margin: .5rem;
            margin-left: auto;
            margin-right: auto
        }
        
    </style>
</head>

<body>
    <div>
        <h1> Welcome to Admin Page</h1>

        <p><a href="/admin">Admin Main  Page</a></p>
        <% if (authorized && username) { %>
            <p class="">Hi, Admin <span style="font-size: 1.6rem"><%= username %></span> !&nbsp</>
            <a href="/admin/logout"><button class="action-button">Logout</button></a>

            <% } else { %>
            <a href="/admin/login"><button class="action-button" >Login</button></a>
            <a href="/admin/register"><button class="action-button">Sign Up</button></a>
        <% } %>
    </div>

    <div>
        <%- body %>
    </div>
    

    <script>
        // Get the modals and buttons
        const dogImageModal = document.getElementById("dogImageModal");
        const dogUploadModal = document.getElementById("dogUploadModal");
        const dogImageUploadBtn = document.getElementById("dogImageUploadBtn");
        const dogUploadBtn = document.getElementById("dogUploadBtn");

        // When the user clicks the button, open the modal
        dogImageUploadBtn.onclick = function () {
            dogImageModal.style.display = "block";
        };

        dogUploadBtn.onclick = function () {
            dogUploadModal.style.display = "block";
        };

        // When the user clicks on <span> (x), close the modal
        const closeButtons = document.getElementsByClassName("close");
        for (const closeButton of closeButtons) {
            closeButton.onclick = function () {
                dogImageModal.style.display = "none";
                dogUploadModal.style.display = "none";
            };
        }

        // Close the modal if the user clicks outside the modal
        window.onclick = function (event) {
            if (event.target === dogImageModal) {
                dogImageModal.style.display = "none";
            }
            if (event.target === dogUploadModal) {
                dogUploadModal.style.display = "none";
            }
        };

